<!-- components/video-item1/index.wxml -->
<wxs src="../../untils/format.wxs" module="format"></wxs>
<view class="item">
  <view class="album">
    <image class="image" src="{{item.cover}}" mode="widthFix" />
    <view class="info">
      <view class="count">{{format.formatCount(item.playCount)}}</view>
      <view class="duration">{{format.formatTime(item.mv.videos[0].duration)}}</view>
    </view>
  </view>
  <view class="content">{{item.name}} - {{item.artistName}}</view>
</view>